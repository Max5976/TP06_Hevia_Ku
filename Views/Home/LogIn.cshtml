@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="inicioSesion">
    <h2>Por favor inicie sesión para ingresar al sitio:</h2>
    @if (ViewBag.Error != null)
    {
        <div>@ViewBag.Error</div>
    }
    <form action='@Url.Action("RegistrarUsuario")' method="post">
        <p>Escriba su Nombre de usuario:</p>    
        <input type="text" name="nombreUsuario" required/>
        <p>Escriba su contraseña:</p>
        <input type="password" name="contrasenia" required/>
        <input type="submit" value="Ingresar"/>
    </form>
    <p>¿No tienes cuenta? <a href='@Url.Action("SignUp")'>Regístrate aquí</a></p>
</div>